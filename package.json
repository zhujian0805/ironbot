{
  "name": "ironbot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/main.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:contract": "vitest run --dir tests/contract",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "release-check": "tsx src/cli/check_release.ts --permissions-file ./permissions.yaml"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@slack/bolt": "^3.14.0",
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.0",
    "pino": "^9.0.0",
    "yaml": "^2.5.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18"
  }
}
